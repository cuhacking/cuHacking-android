<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">?colorSurface</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="menuIconColor">?colorPrimary</item>
    </style>

    <style name="AppTheme.CameraPreview" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="Widget.CuHacking.Button.FloorSelectorButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="android:ellipsize">none</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.CuHacking.Toolbar.Transparent" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:background">#00000000</item>
        <item name="titleTextAppearance">@style/TextAppearance.CuHacking.ToolbarTitle</item>
        <item name="titleTextColor">?colorPrimary</item>
    </style>

    <style name="Widget.CuHacking.Toolbar.SemiTransparent" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:background">#9A000000</item>
        <item name="titleTextAppearance">@style/TextAppearance.CuHacking.ToolbarTitle</item>
        <item name="titleTextColor">?colorPrimary</item>
    </style>

    <style name="Widget.CuHacking.Toolbar.Profile" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:background">#00000000</item>
        <item name="titleTextAppearance">@style/TextAppearance.CuHacking.ToolbarTitle</item>
        <item name="titleTextColor">?colorPrimary</item>
    </style>

    <style name="ThemeOverlay.CuHacking.Toolbar.Surface" parent="ThemeOverlay.MaterialComponents.Toolbar.Surface">
        <item name="android:textColorPrimary">?colorPrimary</item>
        <item name="iconTint">?menuIconColor</item>
    </style>

    <style name="Widget.CuHacking.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleTextColor">?colorPrimary</item>
        <item name="android:elevation">4dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.CuHacking.ToolbarTitle</item>
    </style>

    <style name="TextAppearance.CuHacking.ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/reem_kufi</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ShapeAppearance.CuHacking.BottomCard" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="Widget.CuHacking.Card.Emergency" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?colorSurface</item>
    </style>

    <style name="Widget.CuHacking.Card.Wifi" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorPale</item>
    </style>

    <style name="Widget.CuHacking.Card.Event" parent="Widget.MaterialComponents.CardView">
        <item name="android:textColorPrimary">?android:attr/textColorPrimary</item>
        <item name="android:textColorSecondary">?android:attr/textColorSecondary</item>
        <item name="android:textColorHint">?android:attr/textColorHint</item>
    </style>

    <style name="Widget.CuHacking" parent="@android:style/Widget.Material" />

    <style name="Widget.CuHacking.TimeHeaders">
        <item name="android:width">64dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="timeTextSize">20dp</item>
        <item name="meridiemTextSize">14dp</item>
    </style>
</resources>
