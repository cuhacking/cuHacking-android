<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPale</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#282828</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="menuIconColor">?android:textColorPrimary</item>
        <item name="android:navigationBarColor">#2D2D2D</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <style name="Widget.CuHacking.Card.Wifi" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorPaleDark</item>
    </style>

    <style name="Widget.CuHacking.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleTextColor">?android:textColorPrimary</item>
        <item name="android:elevation">4dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.CuHacking.ToolbarTitle</item>
    </style>

    <style name="Widget.CuHacking.Toolbar.Transparent" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:background">#00000000</item>
        <item name="titleTextAppearance">@style/TextAppearance.CuHacking.ToolbarTitle</item>
        <item name="titleTextColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.CuHacking.ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/reem_kufi</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>